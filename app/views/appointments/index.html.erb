<h1>Lista de turnos</h1>

<% if @appointments.any? %>
  <section class="booked-appointments">
    <h2>Turnos solicitados (esperando confirmaci√≥n)</h2>
    <ul>
      <% @appointments.booked.each do |appointment| %>
        <li class="appointment">
          <%= appointment.date_on %>
          <%= appointment.customer_name %>
          <%= appointment.starts_at %> por <%= appointment.duration %> horas.
        </li>
      <% end %>
    </ul>
  </section>
  <section class="cancelled-appointments">
    <h2>Turnos cancelados</h2>
    <ul>
      <% @appointments.cancelled.each do |appointment| %>
        <li class="appointment">
          <%= appointment.date_on %>
          <%= appointment.customer_name %>
          <%= appointment.starts_at %> por <%= appointment.duration %> horas.
        </li>
      <% end %>
    </ul>
  </section>
<% else %>
  <p>No se encontraron turnos.</p>
<% end %>
